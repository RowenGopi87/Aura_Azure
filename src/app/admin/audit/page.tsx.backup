interface AuditEvent {
  id: string;
  userId: string;
  userName: string;
  userEmail: string;
  eventType: string;
  featureCategory: string;
  action: string;
  resourceType: string;
  resourceId: string;
  resourceTitle: string;
  wasSaved: boolean;
  wasEdited: boolean;
  wasExported: boolean;
  wasIntegrated: boolean;
  integrationTarget?: string;
  generationTimeMs?: number;
  aiModelUsed?: string;
  createdAt: string;
