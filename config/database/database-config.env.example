# Aura Database Configuration Example
# Copy this to your .env file and update with your values

# ================================
# MARIADB DATABASE CONFIGURATION
# ================================
AURA_DB_HOST=localhost
AURA_DB_PORT=3306
AURA_DB_USER=your_mariadb_username
AURA_DB_PASSWORD=your_mariadb_password
AURA_DB_NAME=aura_playground
AURA_DB_MAX_POOL_SIZE=10
AURA_DB_SSL=false

# ================================
# EMBEDDING SERVICE CONFIGURATION
# ================================
# Set to 'openai', 'gemini', 'huggingface', or leave empty to disable
AURA_EMBEDDING_PROVIDER=openai

# Required if using OpenAI embeddings
AURA_EMBEDDING_API_KEY=sk-your-openai-api-key-here
AURA_EMBEDDING_MODEL=text-embedding-3-small

# Alternative: Use existing OpenAI key from main config
# OPENAI_API_KEY=sk-your-openai-api-key-here

# ================================
# RAG SYSTEM CONFIGURATION
# ================================
# These will be used by the embedded RAG system
AURA_RAG_CHUNK_SIZE=1000
AURA_RAG_CHUNK_OVERLAP=200
AURA_RAG_MAX_SEARCH_RESULTS=5

# ================================
# OPTIONAL: ADVANCED SETTINGS
# ================================
# Logging level for database operations
AURA_DB_LOG_LEVEL=INFO

# Connection timeout (seconds)
AURA_DB_TIMEOUT=30

# Enable query logging (development only)
AURA_DB_LOG_QUERIES=false

