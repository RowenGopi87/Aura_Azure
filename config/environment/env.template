# ========================================
# AURA ENTERPRISE ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env in the root directory and update with your values
# DO NOT commit the .env file to version control

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Application base URL (used for API callbacks and internal references)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# Application environment
NODE_ENV=development

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MariaDB/MySQL database connection settings
AURA_DB_HOST=localhost
AURA_DB_PORT=3306
AURA_DB_USER=aura_user
AURA_DB_PASSWORD=your_secure_database_password_here
AURA_DB_NAME=aura_playground
AURA_DB_MAX_POOL_SIZE=10
AURA_DB_SSL=false
AURA_DB_TIMEOUT=30
AURA_DB_LOG_LEVEL=INFO
AURA_DB_LOG_QUERIES=false

# ========================================
# MCP (Model Context Protocol) CONFIGURATION
# ========================================
# MCP Bridge Server (connects Aura to external services)
MCP_BRIDGE_URL=http://localhost:8000
MCP_BRIDGE_PORT=8000

# Playwright MCP Server (browser automation)
PLAYWRIGHT_MCP_URL=http://localhost:8931
PLAYWRIGHT_MCP_PORT=8931

# Jira MCP Server (project management integration)
JIRA_MCP_URL=http://localhost:8932
JIRA_MCP_PORT=8932
JIRA_CLOUD_ID=your_jira_cloud_id_here
JIRA_DEFAULT_PROJECT_KEY=SCRUM

# MCP Debug mode
MCP_USE_DEBUG=false

# ========================================
# LLM API KEYS & CONFIGURATION
# ========================================
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Google AI (Gemini) API Configuration
GOOGLE_API_KEY=your_google_api_key_here
NEXT_PUBLIC_GOOGLE_API_KEY=your_google_api_key_here

# Anthropic (Claude) API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
NEXT_PUBLIC_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ========================================
# DEFAULT LLM SETTINGS
# ========================================
# Default LLM provider (openai, google, anthropic)
DEFAULT_LLM_PROVIDER=openai

# Default model for each provider
DEFAULT_OPENAI_MODEL=gpt-4o
DEFAULT_GOOGLE_MODEL=gemini-2.5-pro
DEFAULT_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Default generation parameters
DEFAULT_LLM_TEMPERATURE=0.7
DEFAULT_LLM_MAX_TOKENS=4000

# ========================================
# EMBEDDING & RAG CONFIGURATION
# ========================================
# Embedding service configuration
AURA_EMBEDDING_PROVIDER=openai
AURA_EMBEDDING_API_KEY=your_openai_api_key_here
AURA_EMBEDDING_MODEL=text-embedding-3-small

# RAG system configuration
AURA_RAG_CHUNK_SIZE=1000
AURA_RAG_CHUNK_OVERLAP=200
AURA_RAG_MAX_SEARCH_RESULTS=5

# ========================================
# SECURITY & MONITORING
# ========================================
# Enable/disable debug logging
DEBUG_MODE=false

# API rate limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_WINDOW_MS=900000

# Request timeout (milliseconds)
API_REQUEST_TIMEOUT=30000

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
# Enable mock responses for testing
USE_MOCK_LLM_RESPONSES=false

# Enable detailed error reporting
DETAILED_ERROR_REPORTING=true

# Enable performance monitoring
PERFORMANCE_MONITORING=false
